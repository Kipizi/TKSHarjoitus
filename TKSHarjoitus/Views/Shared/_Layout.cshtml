<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://getbootstrap.com/docs/5.3/assets/css/docs.css" rel="stylesheet">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand dropdown-toggle" href="#" id="loggedStatusDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
            @ViewBag.LoggedStatus
        </a>
        <ul class="dropdown-menu" aria-labelledby="loggedStatusDropdown">
            @if (ViewBag.LoggedStatus == "Logged in") // Assuming you have a condition to check if the user is logged in
            {
                <li><a class="dropdown-item" href="/Home/Login">Log Out </a> </li>            
            }
            @if (ViewBag.LoggedStatus == "Logged out")
            {
                <li><a class="dropdown-item" href="/Home/Login">Log In</a></li>
            }
            @if (ViewBag.LoggedStatus == "Log in/out")
            {
                <li><a class="dropdown-item" href="/Home/Logout">Log Out</a></li>
                <li><a class="dropdown-item" href="/Home/Login">Log In</a></li>
            }


        </ul>

        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor02" aria-controls="navbarColor02" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarColor02">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link" href="/Home/Index">Home</a>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Company</a>
                    <div class="dropdown-menu">
                        <a class="dropdown-item" href="/Home/About">About</a>
                        <a class="dropdown-item" href="/Home/Contact">Contact</a>
                        <div class="dropdown-divider"></div>
                    </div>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Applications</a>
                    <div class="dropdown-menu">
                        <a class="dropdown-item" href="/Tuotteet/Tuotteet">Tuotteet</a>
                        <a class="dropdown-item" href="/Postitoimipaikat/Postitoimipaikat">Postitoimipaikat</a>
                        <a class="dropdown-item" href="/Tuotteet/Tuotteet2">Tuotteet2</a>
                    </div>
                </li>
            </ul>
        </div>
    </nav>


    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Northwind demo app</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @*@Scripts.Render("~/bundles/bootstrap")*@
    @RenderSection("scripts", required: false)

</body>
</html>

